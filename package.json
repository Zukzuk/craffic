{
    "name": "Craffic",
    "version": "0.2.0",
    "description": "A modern Graphic-Novel Library",
    "author": "Dave Timmerman",
    "private": true,
    "license": "UNLICENSED",
    "homepage": "https://craffic.com",
    "repository": {
        "type": "git",
        "url": "https://github.com/Zukzuk/craffic.git"
    },
    "engines": {
        "npm": ">=8.0.0",
        "node": ">=16.0.0"
    },
    "devDependencies": {
        "concurrently": "^7.0.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.3.4"
    },
    "scripts": {
        "dev": "docker-compose -f docker-compose.dev.yml up --build -V",
        "build:nestjs": "(cd server; bash docker.build.sh)",
        "precommit": "concurrently \"npm run test:server\" \"npm run test:web\"",
        "test:server": "cd ./server && npm install && npm run lint && npm run test:cov && exit",
        "test:web": "cd web && npm install && npm run lint && CI=true npm run test:cov"
    }
}
